<!DOCTYPE html>
<html lang="en">

<%- include("templates/_header") %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include("templates/_sidebar") %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include("templates/_navbar") %>



                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Content Row -->
                                <div class="row">
                                    <!-- Content Column -->
                                    <div class="col-lg-12 mb-4">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6 class="m-0 font-weight-bold text-primary">Your Certificates
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a data-target="#addCertificate" data-toggle="modal"
                                                            class="float-right btn btn-sm btn-outline-success mx-2 text-dark">
                                                            <i class="bi bi-plus"></i>
                                                            New Certificate!
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>


                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Certificate Image</th>
                                                        <th scope="col">Certificate Name</th>
                                                        <th scope="col">Certificate Type</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; i < certificates.length; i++) { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= certificates[i]._id %>
                                                            </th>
                                                            <td>
                                                                <a data-target="#lookImage<%= certificates[i]._id %>"
                                                                    data-toggle="modal" style="cursor: pointer;">
                                                                    <img src="<%= certificates[i].certificateImage %>"
                                                                        width="80px">
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <%= certificates[i].certificateName %>
                                                            </td>
                                                            <td>
                                                                <% if(certificates[i].certificateType === "filter-success") { %>
                                                                    Achievement Certificate
                                                                <% } %>
                                                                <% if(certificates[i].certificateType === "filter-part") { %>
                                                                    Participation Certificate
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <a href="/admin/certificate/<%= certificates[i]._id %>?_method=DELETE"
                                                                    class="btn btn-sm btn-outline-danger">
                                                                    <i class="bi bi-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>

                                                        <!-- LOOK IMAGE -->
                                                        <div class="modal fade" style="--bs-modal-width: 1035px;" id="lookImage<%= certificates[i]._id %>"
                                                            tabindex="-1" role="dialog"
                                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">
                                                                            <%= certificates[i].certificateName %>
                                                                        </h5>
                                                                        <button type="button" class="close"
                                                                            data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">

                                                                        <img
                                                                            src="<%= certificates[i].certificateImage %>" width="1000px">

                                                                    </div>
                                                                </div>
                                                            </div>


                                                            

                                                        </div>


                                                        

                                                        <% } %>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.container-fluid -->

                    </div>
                    <!-- End of Main Content -->

                    <!-- ADD CERTIFICATE -->
                    <div class="modal fade" id="addCertificate" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">New Certificate!</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    <form method="POST" action="/admin/certificate" enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label>Certificate Name</label>
                                            <input type="text" name="certificateName" class="form-control">
                                        </div>


                                        <div class="form-group">
                                            <label>Certificate Picture</label>
                                            <input type="file" name="certificateImage" class="form-control-file">
                                        </div>

                                        <div class="form-group">
                                            <label>Filter</label>
                                            <select name="certificateType" class="form-select">
                                                <option value="filter-success">Achievement</option>
                                                <option value="filter-part">Participation</option>
                                            </select>
                                        </div>

                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-danger"
                                        data-dismiss="modal">Close!</button>
                                    <button type="submit" class="btn btn-outline-success">Save!</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <%- include("templates/_footer") %>

                    <!-- End of Content Wrapper -->

                </div>
                <!-- End of Page Wrapper -->

                <!-- Scroll to Top Button-->
                <a class="scroll-to-top rounded" href="#page-top">
                    <i class="fas fa-angle-up"></i>
                </a>

                <%- include("templates/_script") %>



    </body>

</html>