<!DOCTYPE html>
<html lang="en">

<%- include("templates/_header") %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include("templates/_sidebar") %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include("templates/_navbar") %>

                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Content Row -->
                                <div class="row mt-4">

                                    <div class="col-lg-6 mb-4">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-dark">Add School</h6>
                                            </div>
                                            <div class="container">
                                                <form method="POST" action="/admin/resume">

                                                    <div class="form-group mt-3">
                                                        <div class="row">
                                                            <div class="col-md-9">
                                                                <input type="text" name="school" class="form-control"
                                                                    placeholder="School Name">
                                                            </div>
                                                            <div class="col-md-3">
                                                                <input type="text" name="country" class="form-control"
                                                                    placeholder="Country">
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <input type="text" name="faculty" class="form-control"
                                                            placeholder="Faculty Name">
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <input type="text" name="eduStartedYear"
                                                                    class="form-control" placeholder="Started Year">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <input type="text" name="eduEndYear"
                                                                    class="form-control" placeholder="End Year">
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="form-group mt-3">
                                                        <button type="submit"
                                                            class="btn btn-outline-success w-100">Save!</button>
                                                    </div>


                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 mb-4">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-dark">Add Experience</h6>
                                            </div>
                                            <div class="container">
                                                <form action="/admin/resume" method="post">

                                                    <div class="form-group mt-3">
                                                        <input type="text" name="jobTitle" class="form-control"
                                                            placeholder="Job Title">
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <input type="text" name="company" class="form-control"
                                                            placeholder="Company Name">
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <input type="text" name="expStartedYear"
                                                                    class="form-control" placeholder="Started Year">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <input type="text" name="expEndYear"
                                                                    class="form-control" placeholder="End Year">
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <input type="text" name="language" class="form-control"
                                                            placeholder="Your Use Technologies">
                                                            <small>NodeJS | GoLang | MongoDB...</small>
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <textarea name="description" class="form-control" placeholder="Job Description" maxlength="150"></textarea>
                                                    </div>

                                                    <div class="form-group mt-3">
                                                        <button type="submit"
                                                            class="btn btn-outline-success w-100">Save!</button>
                                                    </div>


                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <!-- /.container-fluid -->

                            <div class="container-fluid">

                                <!-- Content Row -->
                                <div class="row mt-4">

                                    <div class="col-lg-6 mb-4">
                                        <h4>Your Schools</h4>
                                        <table class="table table-striped">
                                            <thead>
                                              <tr>
                                                <th scope="col">University</th>
                                                <th scope="col">Faculty</th>
                                                <th scope="col">Action</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let i = 0; i < resumes.length; i++) { %>
                                                    <% if(resumes[i].school) { %>
                                              <tr>
                                                <td><%= resumes[i].school %></td>
                                                <td><%= resumes[i].faculty %></td>
                                                <td>
                                                    <a class="btn btn-sm btn-outline-danger" href="/admin/resume/<%= resumes[i]._id %>?_method=DELETE">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                              </tr>
                                              <% } %>
                                              <% } %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="col-lg-6 mb-4">
                                        <h4>Your Experience</h4>
                                        <table class="table table-striped">
                                            <thead>
                                              <tr>
                                                <th scope="col">Title</th>
                                                <th scope="col">Company Name</th>
                                                <th scope="col">Use Lanuages</th>
                                                <th scope="col">Action</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let i = 0; i < resumes.length; i++) { %>
                                                    <% if(resumes[i].company) { %>
                                              <tr>
                                                <td><%= resumes[i].jobTitle %></td>
                                                <td><%= resumes[i].company %></td>
                                                <td><%= resumes[i].language %></td>
                                                <td>
                                                    <a class="btn btn-sm btn-outline-danger" href="/admin/resume/<%= resumes[i]._id %>?_method=DELETE">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                              </tr>
                                              <% } %>
                                              <% } %>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>

                    </div>
                    <!-- End of Main Content -->

                    <%- include("templates/_footer") %>


                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <%- include("templates/_script") %>



    </body>

</html>