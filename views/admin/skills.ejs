<!DOCTYPE html>
<html lang="en">

<%- include("templates/_header") %>

<body id="page-top">
    
    <!-- Page Wrapper -->
    <div id="wrapper">
        
        <%- include("templates/_sidebar") %>
        
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            
            <!-- Main Content -->
            <div id="content">
                
                <%- include("templates/_navbar") %>

                
                
                <!-- Begin Page Content -->
                <div class="container-fluid">

                
                        
                        
                        <!-- Content Row -->
                        <div class="row">
                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Content Row -->
                                <div class="row">
                                    <!-- Content Column -->
                                    <div class="col-lg-12 mb-4">
                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6 class="m-0 font-weight-bold text-primary">Your Skills
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a data-target="#addSkill" data-toggle="modal"
                                                            class="float-right btn btn-sm btn-outline-success mx-2 text-dark">
                                                            <i class="bi bi-plus"></i>
                                                            New Skill!
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>


                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Skill Icon</th>
                                                        <th scope="col">Skill Name</th>
                                                        <th scope="col">Skill Category</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; i < skills.length; i++) { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= i+1 %>
                                                            </th>
                                                            <td>
                                                                <img src="<%= skills[i].icon %>" width="auto" height="40px">
                                                            </td>
                                                            <td>
                                                                <%= skills[i].name %>
                                                            </td>
                                                            <td>
                                                                <strong><%= skills[i].category %></strong>  
                                                            </td>
                                                   
                                                            <td>
                                                                <a href="/admin/skills/<%= skills[i]._id %>?_method=DELETE"
                                                                    class="btn btn-sm btn-outline-danger">
                                                                    <i class="bi bi-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>

                                                        <% } %>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.container-fluid -->
                        </div>
                        <!-- End of Main Content -->

                    <!-- ADD SKILL -->
                    <div class="modal fade" id="addSkill" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">New Skill!</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    <form method="POST" action="/admin/skills" enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label>Skill Name</label>
                                            <input type="text" name="name" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label>Skill Category</label>
                                            <select name="category" class="form-control">
                                                <option value="Programming Language">Programming Language</option>
                                                <option value="Database">Database</option>
                                                <option value="Framework">Framework</option>
                                                <option value="Tool">Tool</option>
                                            </select>
                                        </div>


                                        <div class="form-group">
                                            <label>Skill Icon</label>
                                            <input type="file" name="icon" class="form-control-file">
                                        </div>


                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-danger"
                                        data-dismiss="modal">Close!</button>
                                    <button type="submit" class="btn btn-outline-success">Save!</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>

                        
                        
                </div>
                    
                    
               
                <!-- /.container-fluid -->
                
            </div>
            <!-- End of Main Content -->
            
            <%- include("templates/_footer") %>

        </div>
        <!-- End of Content Wrapper -->
        
    </div>
    <!-- End of Page Wrapper -->
    
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    
    <%- include("templates/_script") %>
    
   

</body>

</html>